{
  "verbose": true,
  "watch": [
    "Makefile",
    "nodemon.json",
    "*.py",
    "requirements.txt",
    "tree_plus_src",
    "tests",
    "test.sqlite",
    "pytest.ini"
  ],
  "exec": "make debug_command || exit 1",
  "env": {
    "DEBUG_TREE_PLUS": "1"
  },
  "ext": "*",
  "ignore": [
    "**/*.pyc", 
    "tree_plus.egg-info",
    "tests/version_increments/*",
    "tests/readme_updates/*",
    "tree_plus_programs/test_stub_tests.py"
  ]
}